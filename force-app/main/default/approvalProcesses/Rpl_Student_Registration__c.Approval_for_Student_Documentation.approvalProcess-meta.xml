<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Rpl_Full_Name__c</field>
        <field>Rpl_Personal_Mail_ID__c</field>
        <field>Rpl_10th_Board_Name__c</field>
        <field>Rpl_10th_Percentage__c</field>
        <field>Rpl_10th_Year_of_passing__c</field>
        <field>Rpl_12th_Board_Name__c</field>
        <field>Rpl_12th_Percentage__c</field>
        <field>Rpl_12th_Year_of_passing__c</field>
        <field>Rpl_Status__c</field>
        <field>VH__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>VH__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Rpl_Student_Registration__c.Rpl_Status__c</field>
                <operation>equals</operation>
                <value>Document Validation Pending</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Waiting for Approval</label>
        <name>Waiting_for_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Email_To_Student_After_Successful_Verification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Registration_Successfully</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_To_Student_After_Approval_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Uncheck_Is_Under_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Document_Validation_Failed</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>To_Notify_The_VH_About_The_Verification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_To_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval for Student Documentation</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
