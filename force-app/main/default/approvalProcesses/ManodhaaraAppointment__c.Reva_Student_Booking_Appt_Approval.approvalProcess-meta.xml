<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Appointment_Date__c</field>
        <field>Appointment_Status__c</field>
        <field>Case__c</field>
        <field>Time_Slot__c</field>
        <field>Medical_Information__c</field>
        <field>Next_Follow_Up_Date__c</field>
        <field>Email__c</field>
        <field>HomeWork__c</field>
        <field>Counsellig_Points__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Counsellor Approval</label>
        <name>Counsellor_Approval</name>
