        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Facililty_Request_Approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>Facility_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>TemplateCLApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Facility_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Facility_Request_Rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>TemplateCLRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ApprovlRequest_for_ClassRoom_Lab</name>
            <type>Task</type>
        </action>
        <action>
            <name>TemplateCLRequest</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Facility Approval Request EH</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
