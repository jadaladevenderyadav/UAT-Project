<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Counselor</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>sruthy.chandrasekhar@reva.edu.in</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Application_Number__c</field>
        <field>Name</field>
        <field>hed__Application_Status__c</field>
        <field>Owner</field>
        <field>Concession_Remarks__c</field>
        <field>Concession_1st_Year__c</field>
        <field>Concession_2nd_Year__c</field>
        <field>Concession_3rd_Year__c</field>
        <field>Concession_4th_Year__c</field>
        <field>Concession_5th_Year__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_field_update_under_approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>nirajkumarsingh@reva.edu.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 1</label>
        <name>Approver_1</name>
        <rejectionActions>
            <action>
                <name>Status_field_update_rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_field_update_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>umesh@reva.edu.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 2</label>
        <name>Approver_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Status_field_update_final_rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>All/Concession_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Concession_request_has_been_approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Concession_request_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>X1st_Year_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X2nd_Year_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X3rd_Year_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X4th_Year_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X5th_Year_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_field_update_Initiated</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Concession Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
