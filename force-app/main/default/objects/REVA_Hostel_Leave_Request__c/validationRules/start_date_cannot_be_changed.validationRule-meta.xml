<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>start_date_cannot_be_changed</fullName>
    <active>false</active>
    <description>Start date of leave cannot be changed after record has been created</description>
    <errorConditionFormula>PRIORVALUE(Start_Date_and_Time__c)&lt;=NOW() &amp;&amp; ISCHANGED(Start_Date_and_Time__c )</errorConditionFormula>
    <errorMessage>Start Date cannot be changed</errorMessage>
</ValidationRule>
