<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Number_validation</fullName>
    <active>false</active>
    <errorConditionFormula>(ISPICKVAL(Nationality__c, &quot;Indian&quot;) &amp;&amp;
				ISBLANK( MobilePhone))  
				|| (ISPICKVAL(Nationality__c, &quot;Indian&quot;) &amp;&amp; 
				LEN(MobilePhone) &lt;&gt; 10)</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Please Enter a valid Mobile Number</errorMessage>
</ValidationRule>
