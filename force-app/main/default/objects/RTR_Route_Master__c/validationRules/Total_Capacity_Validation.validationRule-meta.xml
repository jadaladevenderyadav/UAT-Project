<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total_Capacity_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>RTR_Student_Capacity__c + RTR_Faculty_Capacity__c &gt; RTR_Capacity__c</errorConditionFormula>
