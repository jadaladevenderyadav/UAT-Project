<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Discount_Type</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
  NOT(ISBLANK( Discount_Amount__c )), 
  NOT(ISBLANK( Discount_Percent__c )) 
)</errorConditionFormula>
