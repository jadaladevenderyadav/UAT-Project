<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closing_Case_By_InfraCaseRequestorPerson</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(Status) &amp;&amp;
ISPICKVAL(Status, &apos;Closed&apos;) &amp;&amp;
$User.Id &lt;&gt; CreatedById</errorConditionFormula>
    <errorMessage>Case needs to be closed by person raised the case.</errorMessage>
</ValidationRule>
