        <apex:outputText rendered="{!fourthYearFeeRecordSize == 0}"><td style="text-align:center;">NA</td></apex:outputText>
        <apex:outputText rendered="{!fourthYearFeeRecordSize != 0}"><td style="text-align:center;">{!fourthYearBalance}</td></apex:outputText>
        <apex:outputText rendered="{!fifthYearFeeRecordSize == 0}"><td style="text-align:center;">NA</td></apex:outputText>
