<apex:page standardController="hed__Application__c" extensions="POLetter_Extension"   standardStylesheets="false" showHeader="false" renderAs="PDF" >
    <html>
        <head>
            <style type="text/css" >
                @page {
                margin-left:1 cm; 
                margin-right:1 cm;
                margin-top:1 cm; 
                margin-bottom:1 cm;
                @top-Left{
                content: element(header);
                }
                @bottom-Left{
                content: element(footer);
                }
                }                
                div.footer {
                display: block;
                padding: 10px;
                position: running(footer);                
                text-align:Left;
                }              
                div.header {
                display: block;
                position: running(header);
                text-Align:Center;
                
