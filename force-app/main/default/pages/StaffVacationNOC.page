            <tr style="text-align: center;">
                <td colspan="2" style="border: 0.5px solid black;"><h3>Hostel Staff Application - Teaching/Non-Teaching</h3></td>
            </tr>
            <tr>
                <td style="border-left: 0.5px solid black;">Staff Name: {!Con.Name}</td>
                <td style="border: 0.5px solid black;">Employee Id: {!Con.Employee_Number__c}</td>
            </tr>
            <tr>
                <td style="border: 0.5px solid black; ">Department: {!Con.Department}</td>
                <td style="border: 0.5px solid black; ">Designation: {!Con.Designation__c}</td>
            </tr>
            <tr>
                <td style="border: 0.5px solid black;">Joining Date:&nbsp;<apex:outputText value="{0,date,dd/MM/yyyy}"><apex:param value="{!Con.Date_of_Joining__c}" /></apex:outputText></td>
                <td style="border: 0.5px solid black;">Gender: {!Con.hed__Gender__c}</td>
            </tr>
            <tr>
                <td style="border: 0.5px solid black;">Mobile Number: {!Con.MobilePhone}</td>
                <td style="border: 0.5px solid black;">Aadhar Number: {!Con.Aadhar_Card_Number__c}</td>
            </tr>
            <tr> 
                <td style="border: 0.5px solid black; ">Official Email: {!Con.hed__WorkEmail__c}</td>
