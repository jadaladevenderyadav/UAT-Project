<apex:page controller="RHStudentFeePaymentReceiptController" renderAs="pdf">
    
    <div style="text-align: center; margin-bottom: 20px;">
        <apex:image url="{!$Resource.REVA_LOGO}" width="200" height="100" />
    </div> 
    <!-- Center align the Payment Receipt title -->
    <div style="text-align: center;">
        <h2>Payment Receipt</h2>
    </div>
    
    <!-- Define table structure -->
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
        <thead>
            <tr>
                <th style="border: 1px solid black; padding: 8px; text-align: center;">Field</th>
                <th style="border: 1px solid black; padding: 8px; text-align: center;">Value</th>
            </tr>
        </thead>
        <tbody>
            <apex:repeat value="{!receiptInfoList}" var="info">
                <tr>
                    <td style="border: 1px solid black; padding: 8px; text-align: center;">{!info.field}</td>
                    <td style="border: 1px solid black; padding: 8px; text-align: center;">{!info.value}</td>
                </tr>
            </apex:repeat>
        </tbody>
    </table>
    
    <div style="text-align: center;">
        <p><b>Disclaimer:</b>No need for signature for digital and machine-made receipts.</p>
    </div> 
</apex:page>