<apex:page standardController="Rpl_Student_Registration_Drive__c" applyBodyTag="false" applyHtmlTag="false" showHeader="false"  renderAs="pdf" >

    <html>
        <head>
            <style type="text/css" media="print">
                
            </style>
        </head>
        <body>
            <div style="text-align: center; margin-bottom: 30px;">
    <h1  style="font-size: 24px;color: #0070d2; ">{!Rpl_Student_Registration_Drive__c.Rpl_Placement_Drive__r.Name}</h1>
</div>
<div style="text-align: center;">
    <div style="float: left; width: 50%; padding-left:10%"> 
            <apex:outputField value="{!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Student_Image__c}"/>
        </div>
        <!--<div style="padding-left:75% ;width:100px; height:100px; padding-bottom:3%; float:right">-->
        
    <div style="padding-left:70% ;padding-bottom:0.5%;">
        <apex:outputField value="{!Rpl_Student_Registration_Drive__c.Rpl_Placement_Drive__r.Rpl_Company_Name__r.Company_Image__c}"/>
    </div>
</div>

<div style="clear: both;"></div> <!-- Clears the float for subsequent content -->

<div style="text-align: center; font-weight: normal; font-size: 16px; padding-top: 5px;">
    <apex:image style="margin-left:37%; display:block" url="{!Rpl_Student_Registration_Drive__c.Rpl_QR_Href_Link__c}" width="180"/>
    <h1 style="font-size: 18px; display:block">{!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Name}</h1>
    <h2 style="font-size: 18px; display:block">{!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Personal_Mail_ID__c}</h2>
    <apex:outputText value="{0,date,dd'-'MM'-'yyyy}" style="font-size: 18px; font-weight:bolder">
    <apex:param value="{!Rpl_Student_Registration_Drive__c.Rpl_Placement_Drive__r.Rpl_Event_Date_Time__c}" />
</apex:outputText>

</div>

<div style="display: block; height: 1px; border: 0 #000; border-top: 2px solid #000; margin: 1em 0; padding: 0;"></div>

<div style="margin-top: 25px; width: 70%;page-break-after: auto; padding-left:20%">
    <table style="width: 100%; text-align: center; font-family: Arial, sans-serif;">
        <tr>
            <td style="width: 50%; vertical-align: top;">
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">COURSE</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">SRN</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">YEAR OF STUDY</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">GENDER</span>
                </div>
                 <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">MOBILE</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">NON APPEARED</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;">OFFER COUNT</span>
                </div>
            </td>
            <td style="width: 50%; vertical-align: top; margin-bottom:0">
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Branch_Name__c}</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_SRN__c} </span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp;{!ROUND(Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Year_Of_Study__c,0)}</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Gender__c}</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Contact_No__c}</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!ROUND(Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Count_of_non_appeared_drives__c, 0)}</span>
                </div>
                <div style="margin-bottom: 30px;">
                    <span style="font-weight: bold; display: block; margin-bottom: 5px; text-align: left; font-size: 18px;"> - &nbsp;&nbsp;&nbsp;&nbsp; {!ROUND(Rpl_Student_Registration_Drive__c.Rpl_Student_Registration__r.Rpl_Offer_Count__c, 0)}</span>
                </div>
            </td>            
        </tr>
    </table>
</div>
        </body>
    </html>



</apex:page>